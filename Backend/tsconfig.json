{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
        // Force reload timestamp: 2025-12-21
    },
    "include": [
        "src/**/*",
        "prisma/**/*"
    ],
    "exclude": [
        "node_modules",
        "prisma/migrations"
    ]
}